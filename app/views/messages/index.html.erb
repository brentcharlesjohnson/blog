<h1>Guestbook</h1>

<%= link_to new_message_path class: 'btn btn-primary' do %>
	<i class="glyphicon glyphicon-pencil"></i> Sign the Guestbook
<% end %>

<table> 
	<tr>
		<th>Name</th>
		<th>Country</th>
		<th>City</th>
		<th>Comment</th>
	</tr>
	
	<% @messages.each do |message| %>
		<tr>
			<td><%= message.name %></td>
			<td><%= message.country %></td>
			<td><%= message.city %></td>
			<td><%= message.comment %></td>
		</tr>
	<% end %>
</table>
