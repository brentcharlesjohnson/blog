<p>
<strong>Theme Title</strong>
<%= @theme_title.title %>
</p>
<p>
<strong>Details</strong>
<%= @theme_title.details %>
</p>

<h2>Content</h2>
<% if @theme_title.articles.empty? %> 
	<p> No content please check again later </p>
	<% else %>
	<ul>
	<% @theme_title.articles.each do |content| %>
		<li> 
			<strong>Title:</strong>
			<%= content.title %> 
		</li>
		<li> 
		<strong>Text:</strong> 
		<%= content.text %> 
		</li>
	<% end %>
	</ul>
<% end %>

<h2>Add an Article:</h2> 
<%= form_for([@theme_title, @theme_title.articles.build]) do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :text %><br> 
	<%= f.text_area :text %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>


<h2>Add an Image:</h2>

