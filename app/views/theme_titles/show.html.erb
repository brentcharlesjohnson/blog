<p>
<strong>Theme Title</strong>
<%= @theme_title.title %>
</p>
<p>
<strong>Details</strong>
<%= @theme_title.details %>
</p>

<h2>Content</h2>
<% if @theme_title.articles.empty? && @theme_title.images.empty? %> 
	<p> No content please check again later </p>
	<% else %>
	<ul>
	<% @theme_title.articles.each do |content| %>
		<li> 
			<strong>Title:</strong>
			<%= content.title %> 
		</li>
		<li> 
		<strong>Text:</strong> 
		<%= content.text %> 
		</li>
	<% end %> <!-- end articles -->
	<% @theme_title.images.each do |i| %>
		<li>
		<strong>Title:</strong>
		<%= i.title %>
		</li>
		<li>
		<%= image_tag i.content.url(:medium) %>
		</li>
	<% end %> <!-- end images -->
	</ul>
<% end %> <!-- end if -->

<h2>Add an Article:</h2> 
<%= form_for([@theme_title, @theme_title.articles.build]) do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :text %><br> 
	<%= f.text_area :text %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>


<h2>Add an Image:</h2>
<%= form_for([@theme_title, @theme_title.images.build]) do |f| %>
	<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.file_field :content %>
	</p>
	<p>
	<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', theme_titles_path %>

